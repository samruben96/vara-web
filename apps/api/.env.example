# Vara API Environment Variables

# Server
PORT=4000
NODE_ENV=development
API_URL=http://localhost:4000
WEB_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/vara?schema=public"

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_JWT_SECRET=your_jwt_secret

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# External APIs (add as needed)
# OPENAI_API_KEY=               # For CLIP embeddings
# TINEYE_API_KEY=               # For reverse image search
# GOOGLE_VISION_API_KEY=        # For reverse image search (Web Detection API)
# HIBP_API_KEY=                 # Have I Been Pwned API for breach checks
# DEEPFAKE_API_KEY=             # For deepfake detection (provider TBD)
